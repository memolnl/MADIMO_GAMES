                android:text="button10" />

            <Button
                android:id="@+id/btn11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#AAA685"
                android:text="button11" />

            <Button
                android:id="@+id/btn12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#6880B1"
                android:text="button12" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnValidar"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#2A949F"
                android:text="oka" />

            <Button
                android:id="@+id/mostrar"
                android:layout_width="221dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#2A949F"
                android:onClick="coin"
                android:text="mostrar">

            </Button>

        </LinearLayout>

        <TextView
            android:layout_width="395dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="1Â° nivel"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="50dp"
            android:textStyle="bold"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/crono"
            android:layout_width="395dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="00:00:00"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="70dp"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/start"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#3AB5B3"
                android:text="start" />

            <Button
                android:id="@+id/stop"
                android:layout_width="131dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#3AB5B3"
                android:text="stop" />

            <Button
                android:id="@+id/reset"
                android:layout_width="157dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#3AB5B3"
                android:text="reset" />

        </LinearLayout>

        <TextView
            android:id="@+id/texto2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:text="Orden"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="32dp" />

        <TextView
            android:id="@+id/texto"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:backgroundTint="@color/white"
            android:text=""
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="17dp" />

        <Button
            android:id="@+id/autocompletar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#2A949F"
            android:text="auto" />

        <TextView
            android:id="@+id/numerosordenados"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:textSize="14dp">


        </TextView>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>